    const saveData = (no_invoice, barcode, qty, harga_jual, total_harga_detail) => {
        console.log(no_invoice, barcode, qty, harga_jual, total_harga_detail)
        $.ajax({
            method: "POST",
            url: `http://localhost:3000/penjualan/detail`,
            dataType: "json",
            headers: {
                json: true
            },
