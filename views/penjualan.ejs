        var harga = $('#total_harga').val();
        var bayar = $('#total_bayar').val();
        $('#kembalian').val(bayar - harga);
    }

    $(document).ready(function () {
        readData()
        // readSelect()

        $('#saveDetails').click(function (event) {
            event.preventDefault();
